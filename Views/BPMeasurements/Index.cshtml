@model IEnumerable<Bpassignment.Models.BPMeasurement>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Systolic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diastolic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeasurementDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Systolic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diastolic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeasurementDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
